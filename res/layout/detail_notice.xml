<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/kaixin_background"
            android:clickable="true"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="48dip"
                android:background="@drawable/beijing"
                >

            <Button
                    android:id="@+id/detail_notice_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/left_button_hdtd"/>
            <LinearLayout
                    android:id="@+id/home_top_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="35dip"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/detail_notice_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dip"
                        android:text="告示详情"
                        android:textColor="#ffffff"
                        android:textSize="18sp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:duplicateParentState="true"
                        />
            </LinearLayout>

            <TextView
                    android:id="@+id/home_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="15dip"
                    />
        </LinearLayout>
        <com.child.manage.util.ReboundScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

            <TextView android:layout_width="fill_parent"
                      android:text="摘要"
                      android:layout_marginTop="5dp"
                      android:textSize="18dp"
                      android:textColor="@color/result_view"
                      android:textStyle="normal"
                      android:gravity="center|left"
                      android:layout_marginLeft="20dp"
                      android:id="@+id/detail_notice_zhaiyao"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="fill_parent"
                      android:text="neirong"
                      android:layout_marginTop="5dp"
                      android:textSize="18dp"
                      android:id="@+id/detail_notice_cont"
                      android:gravity="center|left"
                      android:textColor="@color/result_view"
                      android:textStyle="normal"
                      android:layout_marginLeft="20dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="match_parent"
                       android:src="@drawable/line"
                       android:layout_marginTop="5dp"
                       android:layout_height="wrap_content"/>
            <TextView android:layout_width="fill_parent"
                      android:text="neirong"
                      android:layout_marginTop="5dp"
                      android:textSize="18dp"
                      android:id="@+id/detail_notice_dateline"
                      android:gravity="center|right"
                      android:layout_marginRight="20dp"
                      android:textColor="@color/result_view"
                      android:textStyle="normal"
                      android:layout_marginLeft="20dp"
                      android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content"
                       android:src="@drawable/tx"
                       android:visibility="gone"
                       android:id="@+id/notice_detail_cover"
                       android:layout_height="wrap_content"/>

        </LinearLayout>
        </com.child.manage.util.ReboundScrollView>

    </LinearLayout>

</LinearLayout>