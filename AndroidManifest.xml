<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.child.manage"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="14"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application android:label="@string/app_name"
                 android:name=".ChildApplication"
                 android:theme="@android:style/Theme.NoTitleBar"
                 android:icon="@drawable/ic_launcher">
        <activity android:name=".ui.StartActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"/>
        <activity android:name=".base.BaseActivity"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".ui.PhoneAlbumActivity"/>
        <activity android:name=".ui.CheckInActivity"/>
        <activity android:name=".ui.DeletePhotoActivity"/>
        <activity android:name=".ui.VoiceActivity"/>
        <activity android:name=".ui.WriteRecordActivity"/>

    </application>
</manifest>
